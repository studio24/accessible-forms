{
    "name": "studio24/accessible-forms",
    "description": "Create more accessible forms in your PHP apps.",
    "keywords": [
        "studio24",
        "forms",
        "accessibility",
        "laravel",
        "symfony"
    ],
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/studio24/accessible-forms",
    "require": {
        "php": "^8.2",
        "barryvdh/laravel-form-bridge": "^0.7.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": ">10",
        "roave/security-advisories": "dev-latest",
        "squizlabs/php_codesniffer": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Studio24\\AccessibleForms\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Studio24\\AccessibleForms\\Tests\\": "tests"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"file_exists('config/form.php') || copy('vendor/studio24/accessible-forms/config/form.php', 'config/form.php');\""
        ],
        "test": "./vendor/bin/phpunit",
        "cs": "./vendor/bin/phpcs",
        "format": "./vendor/bin/phpcbf",
        "phpstan": "./vendor/bin/phpstan"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
